@model List<EmployeePortal.Models.Domain.Employee>
@{

}


<div class="grid-container">
    <h1 class="text-white">Employees</h1>
    <a class="nav-link text-white btn btn-primary" asp-area="" title="Add new employee" asp-controller="Employees" asp-action="Add">Add Employees</a>
</div>

<table id="EmployeeTable" class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model){
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.PhoneNo</td>
                <td>@employee.DateOfBirth</td>
                <td>@employee.Department</td>
                <td>
                    <a href="Employees/View/@employee.Id">
                        <i class="fa-regular fa-pen-to-square" style="color:#ffffff;margin:1em" title="Edit"></i>
                    </a>
                    <a href="Employees/DeleteList/@employee.Id">
                        <i class="fa-solid fa-trash" style="color: #ffffff; margin:1em" title="Delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>