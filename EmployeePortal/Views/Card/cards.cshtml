@model List<EmployeePortal.Models.Domain.Employee>


<div class="container" style="height: 80vh; overflow-y: auto;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">He is Working as a @item.Department since @item.DateOfBirth.ToString("MM/dd/yyyy") . Contact Him through mobile no @item.PhoneNo</p>
                        <a href="mailto:@item.Email" class="btn btn-success">
                            <i class="fa-solid fa-envelope"></i>
                        </a>
                        <a href="Employees/View/@item.Id" class="btn btn-success">
                            <i class="fa-solid fa-pen-to-square" style="color:#FFBF00;" title="Edit"></i>
                        </a>
                        <a href="Delete/@item.Id" class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash" style="color: #ED2939;"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



